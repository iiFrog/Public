def main():
	if platform.system() == 'Linux':
		clear = lambda: os.system('clear') # 'cls' if windows
	if platform.system() == 'Windows':
		clear = lambda: os.system('cls') # 'clear' if linux
	clear()
	question = input(' Password Generator [1]\n Password Saver [2]\n Password Viewer [3]\n Exit [0]\n')
	if question == '1':
		clear()
		PassGen()
		q = input('\n'  + 'Back to start [0]')
		if q == '0':
			clear()
			main()
	if question == '2':
		clear()
		PassSave()
		backToStart()
	if question == '0':
		sys.exit()


	def PassView():
		q = input('What is your account stored as (number, category, etc?\n')
		with open('accounts.txt', 'r') as r:
			for line in r:
				if q in line:
					line1 = r.readline()
					print("\n" + "\n" + "Your account for "+ q +":" +"\n" + "\n" +line1+"\n")
	#if question == [finish later]
	if question == '3':
		clear()
		PassView()
		backToStart()
main()
